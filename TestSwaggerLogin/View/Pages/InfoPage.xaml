<Page x:Class="TestSwaggerLogin.View.Pages.InfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TestSwaggerLogin.View.Pages"
      xmlns:viewModel="clr-namespace:TestSwaggerLogin.ViewModel"
      mc:Ignorable="d"
      Title="InfoPage" Height="450" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <Button Content="AllInf" Command="{Binding AllInfoCommand}"></Button>
            <Button Content="NameSurname" Command="{Binding NameSurnameCommand}"></Button>
        </StackPanel>
        
        <Frame Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Content="{Binding CurrentVm}"
               Opacity="{Binding  FrameOpacity}"></Frame>
    </Grid>
</Page>
